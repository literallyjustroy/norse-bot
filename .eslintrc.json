{
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions":{
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "extends": [
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "object-curly-spacing": ["warn", "always"],
        "semi": ["warn", "always"],
        "quotes": ["warn", "single"],
        "@typescript-eslint/no-explicit-any": "off",
        "eqeqeq": ["error", "always"]
    }
}